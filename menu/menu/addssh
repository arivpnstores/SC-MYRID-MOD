echo "   Username : $user"
until [[ $PASSWD =~ ^[a-zA-Z0-9]+$ ]]; do
  read -p "   Password : " PASSWD
done
until [[ $EXPIRED =~ ^[0-9]+$ ]]; do
  read -p "   Expired (days): " EXPIRED
