echo -e " ${z}│$NC 04.) TROJAN$NC   12.) RUNNING$NC     20.) INS. UDP$NC"              
echo -e " ${z}│$NC 05.) SHADOW$NC   13.) CLEAR LOG$NC   21.) CLEAR CACHE$NC" 
echo -e " ${z}│$NC 06.) TRIAL$NC    14.) CREATE SLOW$NC 22.) BOT MENU$NC"  
echo -e " ${z}│$NC 07.) VPS INFO$NC 15.) BCKP/RSTR$NC   23.) UPDATE SCRIPT$NC" 
echo -e " ${z}│$NC 08.) DELL EXP$NC 16.) REBOOT$NC      24.) EDIT BANNER$NC"        
echo -e " ${z}│$NC 00.) BACK TO EXIT$NC  \E[0m\033[0;34m                       $NC"
echo -e " ${z}└──────────────────────────────────────────────────┘${NC}"
echo -e " ${z}┌──────────────────────────────────────────────────┐${NC}"
echo -e " ${z}│$NC Version$NC        :$green V3.0 LTS$NC"
