## CLEAR CACHE VPS
run_cc () {
sudo sync
sudo echo 1 > /proc/sys/vm/drop_caches
sudo sync
sudo echo 2 > /proc/sys/vm/drop_caches
sudo sync
sudo echo 3 > /proc/sys/vm/drop_caches
}

## CLEAR ACOUNT EXPIRED
