echo -e " ${z}│$NC IP VPS${NC}    :$NC $IPVPS${NC}"
echo -e " ${z}│$NC DOMAIN ${NC}   :$NC $domain${NC}"
echo -e " ${z}│$NC UPTIME ${NC}   :$NC $SERONLINE${NC}"
echo -e " ${z}└──────────────────────────────────────────────────┘${NC}"
